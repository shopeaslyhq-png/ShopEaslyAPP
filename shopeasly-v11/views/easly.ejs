        }
    }
    
    // Create preview table
    if (previewTable && data.length > 0) {
        let tableHTML = '<table style="width:100%; border-collapse:collapse; font-size:14px;">';
        
        // Headers
        tableHTML += '<thead><tr>';
        for (let hi=0; hi<headers.length; hi++) {
