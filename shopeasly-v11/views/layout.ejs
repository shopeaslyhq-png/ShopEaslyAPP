<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShopEasly</title>
    <script>
        (function(){
            try {
                var saved = localStorage.getItem('theme') || 'light';
                document.documentElement.setAttribute('data-theme', saved);
            } catch (e) {
                document.documentElement.setAttribute('data-theme', 'light');
            }
        })();
    </script>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/images/shopeasly-logo.png">
            <!-- Chart.js (UMD) for global `Chart` variable; pinned for stability -->
            <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.4/dist/chart.umd.min.js"></script>
            <!-- Chart.js DataLabels plugin compatible with v4 -->
            <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2"></script>
            <script>
                // Safely register DataLabels if present; avoids runtime errors when not used
                if (window.Chart && window.ChartDataLabels && typeof Chart.register === 'function') {
                    Chart.register(ChartDataLabels);
                }
            </script>
    <script src="https://cdn.jsdelivr.net/npm/marked@9.1.6/marked.min.js"></script>
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
    <style>
        /* Ensure basic fonts render consistently if custom fonts fail */
        body { font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif; }
    </style>
    <!-- Prevent search indexing -->
    <meta name="robots" content="noindex,nofollow">
    <meta name="referrer" content="no-referrer">
</head>
<body>
    <div class="app-container">
        <aside class="sidebar">
            <div class="sidebar-header">
                <a href="/" class="logo">
                    <img src="/images/shopeasly-logo.png" alt="ShopEasly" class="logo-img">
                    <span class="logo-text">ShopEasly</span>
                </a>
                <div class="sidebar-profile">
                    <div class="avatar">SE</div>
                    <div class="profile-info">
                        <div class="profile-name">Powered 3 BROS</div>
                        <div class="profile-role">ShopEasly Operation System</div>
                    </div>
                </div>
            </div>

            <nav class="sidebar-nav" aria-label="Primary">
                <ul>
                    <li><a class="nav-btn" href="/">Dashboard</a></li>
                    <li><a class="nav-btn" href="/orders">Orders</a></li>
                    <li><a class="nav-btn" href="/inventory">Inventory</a></li>
                    <li><a class="nav-btn" href="/easly">AI Assistant</a></li>
                </ul>
            </nav>

            <div class="sidebar-footer">
                <div class="theme-picker">
                    <button class="theme-btn" data-theme="light" onclick="setTheme('light')" title="Light Theme">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"/><path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/></svg>
                    </button>
                    <button class="theme-btn" data-theme="dark" onclick="setTheme('dark')" title="Dark Theme">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path></svg>
                    </button>
                </div>
            </div>
        </aside>

        <div id="main-content">
            <header class="main-header">
                <div class="header-start">
                    <button id="sidebar-toggle-btn" class="btn btn-icon" aria-label="Toggle sidebar" title="Toggle sidebar" onclick="toggleSidebar()">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="18" x2="21" y2="18"/></svg>
                    </button>
                    <div class="page-title">
                        <h1>ShopEasly</h1>
                        <p>Operations & order management</p>
                    </div>
                </div>
                <div class="header-actions">
                    <input type="search" class="search-input form-input" placeholder="Search...">
                    <button class="btn btn-icon" title="Notifications">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/><path d="M13.73 21a2 2 0 0 1-3.46 0"/></svg>
                    </button>
                    <button class="btn btn-icon" title="Settings">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/></svg>
                    </button>
                </div>
            </header>

            <main id="app-views">
                <%- body %>
            </main>
        </div>
    </div>

    <button class="ai-fab" onclick="window.location.href='/easly'" title="AI Assistant">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 8-2 2-2-2"></path><path d="m6 8-2 2 2 2"></path><path d="m12 16 2-2 2 2"></path><path d="m18 16 2-2-2-2"></path><rect width="20" height="12" x="2" y="6" rx="2"></rect></svg>
    </button>

    <script>
        function setTheme(theme) {
            document.documentElement.setAttribute('data-theme', theme);
            localStorage.setItem('theme', theme);
            document.querySelectorAll('.theme-btn').forEach(btn => btn.classList.remove('active'));
            var t = document.querySelector('.theme-btn[data-theme="' + theme + '"]');
            if (t) t.classList.add('active');
        }

        const savedTheme = localStorage.getItem('theme') || 'light';
        document.documentElement.setAttribute('data-theme', savedTheme);

        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.theme-btn').forEach(btn => {
                if (btn.dataset.theme === savedTheme) {
                    btn.classList.add('active');
                }
            });
        });

        (function(){
            const currentPath = window.location.pathname.replace(/\/$/, '');
            document.querySelectorAll('.sidebar-nav a.nav-btn').forEach(link => {
                const href = (link.getAttribute('href') || '').replace(/\/$/, '');
                const isActive = href === currentPath || (href && href !== '/' && currentPath.startsWith(href + '/'));
                if (isActive) {
                    link.classList.add('active');
                    link.setAttribute('aria-current', 'page');
                }
            });
        })();

        function toggleSidebar() {
            const app = document.querySelector('.app-container');
            app.classList.toggle('sidebar-open');
            document.body.classList.toggle('no-scroll', app.classList.contains('sidebar-open'));
        }
    </script>

    <div class="loading-overlay" id="global-loading-overlay" style="display:none;">
        <div class="loading-content">
            <div class="spinner-large"></div>
            <p>Loading...</p>
        </div>
    </div>
    <div id="toast-notification"></div>
    <script>
        if (typeof window.showToast !== 'function') {
            window.showToast = function(message, type = 'info') {
                let toast = document.getElementById('toast-notification');
                if (!toast) {
                    toast = document.createElement('div');
                    toast.id = 'toast-notification';
                    document.body.appendChild(toast);
                }
                toast.textContent = message;
                toast.className = `show ${type}`;
                setTimeout(() => { toast.classList.remove('show'); }, 3000);
            }
        }
        if (typeof window.showLoading !== 'function') {
            window.showLoading = function() {
                const el = document.getElementById('global-loading-overlay');
                if (el) el.style.display = 'flex';
            }
        }
        if (typeof window.hideLoading !== 'function') {
            window.hideLoading = function() {
                const el = document.getElementById('global-loading-overlay');
                if (el) el.style.display = 'none';
            }
        }
    </script>

    <script src="/js/copilotModal.js"></script>
    <script src="/js/voicePromptModal.js"></script>
</body>
</html>

